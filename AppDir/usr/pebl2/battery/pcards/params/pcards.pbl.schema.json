{
  "test": "pcards",
  "version": "1.0",
  "description": "PCARDS Test",
  "parameters": [
    {
      "name": "trials",
      "type": "integer",
      "default": 300,
      "description": "number of trials"
    },
    {
      "name": "practice",
      "type": "boolean",
      "default": 0,
      "description": "Whether it is practice (which tells them the rule)",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "timeout",
      "type": "integer",
      "default": -1,
      "description": "How long they have to make a choice"
    },
    {
      "name": "shift",
      "type": "integer",
      "default": 9,
      "description": "number of correct trials needed for shift"
    },
    {
      "name": "numrulesets",
      "type": "boolean",
      "default": 1,
      "description": "how many times through the rule sets?",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "leftresp",
      "type": "string",
      "default": "<lshift>",
      "description": "Key name of left response"
    },
    {
      "name": "rightresp",
      "type": "string",
      "default": "<rshift>",
      "description": "key name of right response"
    },
    {
      "name": "leftlabel",
      "type": "string",
      "default": "left shift",
      "description": "label for left response key"
    },
    {
      "name": "rightlabel",
      "type": "string",
      "default": "right shift",
      "description": "label for right response key"
    }
  ]
}