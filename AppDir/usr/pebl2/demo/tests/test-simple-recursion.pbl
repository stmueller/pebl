## Simple recursion test without graphics

define Start(p)
{
    Print("Testing simple recursion...")

    result1 <- CountDown(10)
    Print("CountDown(10) = " + result1)

    result2 <- CountDown(50)
    Print("CountDown(50) = " + result2)

    result3 <- CountDown(100)
    Print("CountDown(100) = " + result3)

    Print("All tests completed!")
}

define CountDown(n)
{
    result <- 0
    if(n <= 0)
    {
        result <- 0
    } else {
        result <- CountDown(n - 1) + 1
    }
    return(result)
}
