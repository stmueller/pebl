{
  "modes": {
    "auto": {
      "description": "Platform-aware: shift keys on native, safe keys in browser",
      "native": "keyboardShift",
      "emscripten": "keyboardSafe"
    },

    "keyboardShift": {
      "type": "keyboard",
      "keys": ["<lshift>", "<rshift>"],
      "labels": ["LEFT-SHIFT", "RIGHT-SHIFT"],
      "semantic": ["left", "right"],
      "platforms": ["native"],
      "comment": "Traditional - works on native, causes Sticky Keys in browser"
    },

    "keyboardSafe": {
      "type": "keyboard",
      "keys": ["z", "/"],
      "labels": ["Z", "/"],
      "semantic": ["left", "right"],
      "platforms": ["all"],
      "comment": "Browser-safe - no modifier keys"
    },

    "mousebutton": {
      "type": "mousebutton",
      "buttons": [1, 3],
      "labels": ["LEFT-CLICK", "RIGHT-CLICK"],
      "semantic": ["left", "right"],
      "platforms": ["all"],
      "comment": "Click anywhere with left/right mouse buttons"
    },

    "mousetarget": {
      "type": "mousetarget",
      "labels": ["Click for LEFT", "Click for RIGHT"],
      "semantic": ["left", "right"],
      "platforms": ["all"],
      "hideFooter": true,
      "targetSize": {"desktop": 100, "tablet": 150, "phone": 200},
      "comment": "Click on visual targets (auto-sized by device)"
    },

    "touchtarget": {
      "type": "mousetarget",
      "labels": ["Tap for LEFT", "Tap for RIGHT"],
      "semantic": ["left", "right"],
      "platforms": ["all"],
      "hideFooter": true,
      "targetSize": {"desktop": 120, "tablet": 180, "phone": 240},
      "comment": "Tap on visual targets for touchscreen (larger targets, no footer)"
    },

    "arrow": {
      "type": "keyboard",
      "keys": ["<left>", "<right>", "<up>", "<down>"],
      "labels": ["←", "→", "↑", "↓"],
      "semantic": ["left", "right", "up", "down"],
      "platforms": ["all"],
      "comment": "Arrow keys for navigation tasks"
    },

    "number": {
      "type": "keyboard",
      "keys": ["1", "2", "3", "4", "5", "6", "7", "8", "9"],
      "labels": ["1", "2", "3", "4", "5", "6", "7", "8", "9"],
      "semantic": ["1", "2", "3", "4", "5", "6", "7", "8", "9"],
      "platforms": ["all"],
      "comment": "Number keys for multi-alternative tasks"
    },

    "spacebar": {
      "type": "singlekey",
      "keys": ["<space>"],
      "labels": ["SPACEBAR"],
      "semantic": ["response"],
      "footerInstruction": "Press spacebar to respond",
      "platforms": ["all"],
      "comment": "Single-key response for go-nogo and continuous performance tasks"
    },

    "leftclick": {
      "type": "mousebutton",
      "buttons": [1],
      "labels": ["LEFT-CLICK"],
      "semantic": ["response"],
      "footerInstruction": "Click anywhere to respond",
      "platforms": ["all"],
      "comment": "Single left-click response for go-nogo with mouse"
    },

    "touchscreen": {
      "type": "mousebutton",
      "buttons": [1],
      "labels": ["TAP SCREEN"],
      "semantic": ["response"],
      "footerInstruction": "Tap screen to respond",
      "platforms": ["all"],
      "comment": "Single tap/touch response for go-nogo on touchscreen devices - accepts taps anywhere"
    },

    "clicktarget": {
      "type": "mousetarget",
      "labels": ["CLICK HERE"],
      "semantic": ["response"],
      "platforms": ["all"],
      "hideFooter": true,
      "targetSize": {"desktop": 120, "tablet": 160, "phone": 200},
      "comment": "Single clickable target for go-nogo with mouse"
    },

    "mouseOnly": {
      "type": "mouse-only",
      "platforms": ["all"],
      "comment": "Task handles mouse directly (e.g., drawing, clicking objects)"
    }
  }
}
