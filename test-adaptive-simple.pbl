## Simplified adaptive textbox test

define Start(p)
{
    gWin <- MakeWindow("grey80")

    Print("Creating adaptive textbox")
    shortText <- "This is shorter text."
    box <- AdaptiveTextBox(shortText, 100, 100, gWin, 20, 300, 80, "scalefont")
    Draw()

    Print("Font size: " + box.font.size)
    Print("Lines: " + box.numTextLines)
    Print("SUCCESS")

    WaitForAnyKeyPress()
}
