{
  "test": "SimpleRT",
  "version": "1.0",
  "description": "SIMPLERT Test",
  "parameters": [
    {
      "name": "blocks",
      "type": "integer",
      "default": 4,
      "description": "The number of trial blocks"
    },
    {
      "name": "blocklength",
      "type": "integer",
      "default": 50,
      "description": "The number of trials per block"
    },
    {
      "name": "delayMin",
      "type": "integer",
      "default": 250,
      "description": "Smallest delay"
    },
    {
      "name": "delayMax",
      "type": "integer",
      "default": 2500,
      "description": "longest delay"
    },
    {
      "name": "delayStep",
      "type": "integer",
      "default": 250,
      "description": "Step between small and longest"
    },
    {
      "name": "stimulus",
      "type": "string",
      "default": "X",
      "description": "Stimulus character"
    },
    {
      "name": "toofastThresh",
      "type": "integer",
      "default": 150,
      "description": "too fast time in ms"
    },
    {
      "name": "tooslowThresh",
      "type": "integer",
      "default": 3000,
      "description": "Too slow time in ms"
    },
    {
      "name": "responsekey",
      "type": "string",
      "default": "X",
      "description": "Response key to use. can be an empty space for spacebar, or 'mousebutton' for mouse"
    }
  ]
}