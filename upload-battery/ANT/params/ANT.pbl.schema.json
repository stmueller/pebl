{
  "parameters": [
    {
      "name": "iti",
      "type": "integer",
      "default": 4000,
      "description": "Inter-trial interval in milliseconds"
    },
    {
      "name": "showfooter",
      "type": "integer",
      "default": 0,
      "description": "Show footer with response keys (0=hide, 1=show)"
    },
    {
      "name": "leftresponse",
      "type": "string",
      "default": "<lshift>",
      "description": "Key for left response"
    },
    {
      "name": "rightresponse",
      "type": "string",
      "default": "<rshift>",
      "description": "Key for right response"
    },
    {
      "name": "showRT",
      "type": "integer",
      "default": 0,
      "description": "Show reaction time in practice (0=hide, 1=show)"
    },
    {
      "name": "reps",
      "type": "integer",
      "default": 2,
      "description": "Number of repetitions of design matrix"
    },
    {
      "name": "showNeutralFlankers",
      "type": "integer",
      "default": 0,
      "description": "Show neutral flankers as dashes (0=hide, 1=show)"
    },
    {
      "name": "demo_override",
      "type": "integer",
      "default": 0,
      "description": "Run short demo version (1=demo with 1 repetition, 0=full test)",
      "options": {
        "reps": 1
      }
    }
  ]
}
