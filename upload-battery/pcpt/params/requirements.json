{
  "version": "1.0",
  "display": {
    "minimum_width": 800,
    "minimum_height": 600,
    "recommended_width": 1024,
    "recommended_height": 768,
    "notes": "PCPT requires clear visibility of letters at center of screen"
  },
  "input": {
    "keyboard": true,
    "mouse_buttons": false,
    "mouse_movement": false,
    "touch": false,
    "notes": "Requires spacebar for responses"
  },
  "audio": {
    "required": false,
    "recommended": false,
    "notes": "Test is entirely visual"
  },
  "color": {
    "discrimination_required": false,
    "notes": "Black and white letter discrimination"
  },
  "browser": {
    "fullscreen_required": true,
    "minimum_version": {
      "chrome": 90,
      "firefox": 88,
      "safari": 14
    }
  },
  "device": {
    "allowed_types": [
      "desktop",
      "laptop"
    ],
    "block_mobile": true,
    "notes": "Requires physical keyboard for rapid spacebar responses"
  }
}
