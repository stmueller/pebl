## Test defining a recursive function

define Start(p)
{
    Print("Testing recursive function definition...")

    result <- CountDown(5)
    Print("CountDown(5) = " + result)

    Print("Test complete")
}

define CountDown(n)
{
    result <- 0
    if(n <= 0)
    {
        result <- 0
    } else {
        result <- CountDown(n - 1) + 1
    }
    return(result)
}
