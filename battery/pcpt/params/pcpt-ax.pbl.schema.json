{
  "test": "pcpt-ax",
  "version": "1.0",
  "description": "PCPT-AX Test",
  "parameters": [
    {
      "name": "cycles",
      "type": "integer",
      "default": 6,
      "description": "Total number of blocks. cyclesxblocksize is the number of trials"
    },
    {
      "name": "blocksize",
      "type": "integer",
      "default": 20,
      "description": "Number of trials per block"
    },
    {
      "name": "isi",
      "type": "integer",
      "default": 5000,
      "description": "Time between stimuli"
    },
    {
      "name": "prestime",
      "type": "integer",
      "default": 250,
      "description": "Presentation time of stimuli"
    },
    {
      "name": "axprob",
      "type": "float",
      "default": 0.7,
      "description": "probability of a AX trial."
    },
    {
      "name": "bxprob",
      "type": "float",
      "default": 0.1,
      "description": "probability of a BX trial"
    },
    {
      "name": "ayprob",
      "type": "float",
      "default": 0.1,
      "description": "probability of a AY trial"
    },
    {
      "name": "byprob",
      "type": "float",
      "default": 0.1,
      "description": "probability of a BY trial"
    },
    {
      "name": "givefeedback",
      "type": "boolean",
      "default": 0,
      "description": "Whether to give error feedback",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "pausebetweenblocks",
      "type": "boolean",
      "default": 0,
      "description": "should they pause between blocks of trials?",
      "options": [
        0,
        1
      ]
    }
  ]
}