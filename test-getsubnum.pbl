## Test simple textbox with GetInput

define Start(p)
{
  gWin <- MakeWindow("black")

  Print("=== Simple textbox with GetInput() ===")

  ## Create a simple textbox and use GetInput
  prompt <- EasyLabel("Type your name and press ENTER:", gVideoWidth/2, 100, gWin, 20)
  textbox <- EasyTextBox("all work and no play make jack a dull boy.", gVideoWidth/2-100, 150, gWin,16, 400, 150)
  Draw()

  Print("Waiting for input...")
  name <- GetInput(textbox, "<return>")
  Print("Got name: " + name)

  ## Display what was entered
  RemoveObject(textbox, gWin)
  RemoveObject(prompt, gWin)
  result <- EasyLabel("You entered: " + name, gVideoWidth/2, 200, gWin, 30)
  Draw()
  Wait(3000)
}
