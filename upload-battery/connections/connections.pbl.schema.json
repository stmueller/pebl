{
  "parameters": [
    {
      "name": "inputdevice",
      "type": "string",
      "default": "mouse",
      "description": "Input device (mouse or touch)"
    },
    {
      "name": "width",
      "type": "integer",
      "default": 7,
      "description": "Grid width (number of columns)"
    },
    {
      "name": "height",
      "type": "integer",
      "default": 7,
      "description": "Grid height (number of rows)"
    },
    {
      "name": "timelimit",
      "type": "integer",
      "default": 20,
      "description": "Time limit per trial in seconds (-1 for no limit)"
    },
    {
      "name": "demo_override",
      "type": "integer",
      "default": 0,
      "description": "Run short demo version (1=demo with reduced grid, 0=full test)",
      "options": {
        "width": 5,
        "height": 5
      }
    }
  ]
}
