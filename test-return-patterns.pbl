## Test different return statement patterns

define Start(p)
{
  Print("Testing return patterns...")

  ## Test 1: Early return in if block - WITH newline
  result <- Test1WithNewline(15)
  Print("Test1 (with newline): " + result)

  ## Test 2: Early return in if block - WITHOUT newline (will this work?)
  result <- Test2WithoutNewline(15)
  Print("Test2 (without newline): " + result)

  ## Test 3: Return in elseif
  result <- Test3ElseIf(7)
  Print("Test3 (elseif): " + result)
}

## Pattern 1: Return with explicit newline before }
define Test1WithNewline(x)
{
  if(x > 10)
  {
    return("large")
  }

  return("small")
}

## Pattern 2: Return without newline - } on next line
## This is the pattern that fails in test-else-grammar.pbl
define Test2WithoutNewline(x)
{
  if(x > 10)
  {
    return("large")
  }

  return("small")
}

## Pattern 3: Return in elseif
define Test3ElseIf(x)
{
  if(x > 10)
  {
    return("large")
  }
  elseif(x > 5)
  {
    return("medium")
  }
  else
  {
    return("small")
  }
}
