## Test setting bgcolor property

define Start(p)
{
  gWin <- MakeWindow("black")
  Print("Creating label...")
  label <- EasyLabel("Test", 400, 300, gWin, 28)
  Print("Label created. Now setting bgcolor...")
  label.font.bgcolor <- MakeColor("lightgray")
  Print("Background color set successfully!")
  WaitForAnyKeyPress()
}
