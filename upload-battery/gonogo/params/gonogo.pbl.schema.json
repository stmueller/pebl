{
  "test": "gonogo",
  "version": "1.0",
  "description": "GONOGO Test",
  "parameters": [
    {
      "name": "reps",
      "type": "integer",
      "default": 32,
      "description": "Number of repetitions of P/R design (with trials shuffled) in each block"
    },
    {
      "name": "isi",
      "type": "integer",
      "default": 1500,
      "description": "Time between stimuli"
    },
    {
      "name": "pstim",
      "type": "string",
      "default": "P",
      "description": "The 'P' stimulus character"
    },
    {
      "name": "rstim",
      "type": "string",
      "default": "R",
      "description": "the 'R' stimulus character"
    },
    {
      "name": "numTarg",
      "type": "integer",
      "default": 4,
      "description": "Number of 'p' trials per block"
    },
    {
      "name": "numFoil",
      "type": "boolean",
      "default": 1,
      "description": "Number of 'R' trials per block",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "usemouse",
      "type": "boolean",
      "default": 1,
      "description": "Whether the mouse should be used instead of shift key.",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "color",
      "type": "string",
      "default": "blue",
      "description": "the color of star to use."
    },
    {
      "name": "useBJPD",
      "type": "boolean",
      "default": 1,
      "description": "Whether the Bezdein original design should be used (80% targets on both blocks)",
      "options": [
        0,
        1
      ]
    }
  ]
}