## Simpler test - just create and assign colors directly

define Start(p)
{
  gWin <- MakeWindow("black")

  Print("Creating first color...")
  color1 <- MakeColor("red")
  Print("First color created successfully")

  Print("Creating second color...")
  color2 <- MakeColor("blue")
  Print("Second color created successfully")

  Print("Assigning color2 to color1...")
  color1 <- color2
  Print("Assignment successful")

  Print("Creating label...")
  label <- EasyLabel("Test", 400, 300, gWin, 28)
  Print("Label created successfully")

  Print("Getting font...")
  font <- label.font
  Print("Font retrieved successfully")

  Print("Getting initial fgcolor...")
  col <- font.fgcolor
  Print("Initial fgcolor retrieved: " + col)

  Print("Creating new color for assignment...")
  newCol <- MakeColor("red")
  Print("New color created")

  Print("Attempting to assign to font.fgcolor...")
  font.fgcolor <- newCol
  Print("Assignment to font.fgcolor successful!")

  Print("Test complete - no crash")
  WaitForAnyKeyPress()
}
