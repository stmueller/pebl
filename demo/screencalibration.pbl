## Screen Calibration Function
## Measures screen size using physical objects
## Returns calibration data as a custom object

define Start(p)
{


  gScriptname <- "Screen Calibration"

  ## Setup
  gSleepEasy <- 1
  gWin <- MakeWindow("grey80")

  ## Run calibration
  calibData <- CalibrateScreen(gWin)
  
   PrintProperties(calibData)
   MessageBox("Pixels per inch: " + calibData.pixelsperinch ,gWin)
}




