## Test return with } on same line vs different line

define Start(p)
{
  Print("Testing return with } placement...")

  ## Test 1: return with } on SAME line
  result1 <- TestSameLine(5)
  Print("Test1 (same line): " + result1)

  ## Test 2: return with } on NEXT line
  result2 <- TestNextLine(5)
  Print("Test2 (next line): " + result2)

  ## Test 3: return inside if block - } on same line
  result3 <- TestIfSameLine(15)
  Print("Test3 (if same line): " + result3)

  ## Test 4: return inside if block - } on next line
  result4 <- TestIfNextLine(15)
  Print("Test4 (if next line): " + result4)
}

## Pattern 1: return("value") } on same line
define TestSameLine(x)
{
  result <- x * 2
  return(result) }

## Pattern 2: return("value") \n } on different lines
define TestNextLine(x)
{
  result <- x * 2
  return(result)
}

## Pattern 3: return inside if - } on same line
define TestIfSameLine(x)
{
  if(x > 10)
  {
    return("large") }

  return("small")
}

## Pattern 4: return inside if - } on next line
define TestIfNextLine(x)
{
  if(x > 10)
  {
    return("large")
  }

  return("small")
}
