## Test assigning to global label's font property (like gContinueButton in simon.pbl)

define Start(p)
{
  gWin <- MakeWindow("black")

  Print("Creating global label...")
  gContinueButton <- EasyLabel("CONTINUE", 400, 300, gWin, 28)
  gContinueButton.font.bgcolor <- MakeColor("lightgray")
  gContinueButton.font.fgcolor <- MakeColor("black")
  Hide(gContinueButton)
  Draw()

  Print("Global label created successfully. Press any key to continue.")
  WaitForAnyKeyPress()

  Print("Now trying to reassign font.fgcolor on global label...")
  gContinueButton.font.fgcolor <- MakeColor("black")
  Draw()

  Print("First reassignment successful! Press any key.")
  WaitForAnyKeyPress()

  Print("Trying second reassignment...")
  gContinueButton.font.fgcolor <- MakeColor("red")
  Draw()

  Print("Second reassignment successful! Press any key.")
  WaitForAnyKeyPress()

  Print("Trying third reassignment...")
  gContinueButton.font.fgcolor <- MakeColor("black")
  Draw()

  Print("All reassignments successful - no crash!")
  WaitForAnyKeyPress()
}
