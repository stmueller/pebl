{
  "parameters": [
    {
      "name": "stimsize",
      "type": "integer",
      "default": 35,
      "description": "Size of arrow box or prompt box in pixels"
    },
    {  "name": "calibratescreen",
       "type": "string",
       "default": "internal",
       "demo_override": "no",
       "options":["no","internal","user_entry"],
       "description": "Should the screen calibration be used?"
    }, 
    {
      "name": "offset",
      "type": "integer",
      "default": 200,
      "description": "Distance to target/prompt from center in pixels"
    },
    {
      "name": "promptdelay",
      "type": "integer",
      "default": 250,
      "description": "Time between prompt and arrow in milliseconds"
    },
    {
      "name": "stimduration",
      "type": "integer",
      "default": 150,
      "description": "Duration arrow appears in milliseconds"
    },
    {
      "name": "numPractice",
      "type": "integer",
      "default": 22,
      "demo_override": 5,
      "description": "Number of practice trials"
    },
    {
      "name": "numtrials",
      "type": "integer",
      "default": 90,
      "demo_override": 10,
      "description": "Number of test trials"
    },
    {
      "name": "usedown",
      "type": "integer",
      "default": 1,
      "description": "Use down arrow (0=no, 1=yes)"
    }
  ]
}
