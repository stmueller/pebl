{
  "test": "SNARC",
  "version": "1.0",
  "description": "SNARC Test",
  "parameters": [
    {
      "name": "trialspernumber",
      "type": "integer",
      "default": 20,
      "description": "Number of repetition for each number (must be even)"
    },
    {
      "name": "cond",
      "type": "boolean",
      "default": 1,
      "description": "1=abba, 2=baab; a=smaller left,b=smaller right",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "direction",
      "type": "boolean",
      "default": 1,
      "description": "1=horizontal, 2=vertical",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "middle",
      "type": "integer",
      "default": 5,
      "description": "Reference number"
    },
    {
      "name": "start",
      "type": "boolean",
      "default": 1,
      "description": "Smallest number (start of sequence)",
      "options": [
        0,
        1
      ]
    }
  ]
}