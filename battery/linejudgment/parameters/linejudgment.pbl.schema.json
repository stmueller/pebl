{
  "test": "linejudgment",
  "version": "1.0",
  "description": "LINEJUDGMENT Test",
  "parameters": [
    {
      "name": "numtrials",
      "type": "integer",
      "default": 15,
      "description": "Number of trials per deadline condition."
    },
    {
      "name": "usetimer",
      "type": "boolean",
      "default": 1,
      "description": "Whether to use the red visual timer.  Timeout still occurs; it just in't animated.",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "offset",
      "type": "integer",
      "default": 40,
      "description": "Number of pixels offset from midline each line is presented (give-or-take a small amount of jitter)."
    },
    {
      "name": "numblocks",
      "type": "integer",
      "default": 5,
      "description": "Number of parameter-specified deadline blocks to use.  Can be no larger than 5."
    },
    {
      "name": "deadline1",
      "type": "integer",
      "default": 10000,
      "description": "Deadline for first block"
    },
    {
      "name": "deadline2",
      "type": "integer",
      "default": 2000,
      "description": "Deadline for second block"
    },
    {
      "name": "deadline3",
      "type": "integer",
      "default": 1000,
      "description": "Deadline for third block"
    },
    {
      "name": "deadline4",
      "type": "integer",
      "default": 700,
      "description": "Deadline for fourth block"
    },
    {
      "name": "deadline5",
      "type": "integer",
      "default": 400,
      "description": "Deadline for fifth block"
    },
    {
      "name": "minlength",
      "type": "integer",
      "default": 110,
      "description": "Minimum pixel size for line"
    },
    {
      "name": "maxlength",
      "type": "integer",
      "default": 120,
      "description": "Maximum pixel size for line"
    }
  ]
}