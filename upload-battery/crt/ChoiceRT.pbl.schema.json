{
  "parameters": [
    {
      "name": "reps",
      "type": "integer",
      "default": 5,
      "description": "How many repetitions of the stimuli"
    },
    {
      "name": "soa",
      "type": "integer",
      "default": 2000,
      "description": "Stimulus onset asynchrony - how long between stimuli (ms)"
    },
    {
      "name": "numstim",
      "type": "integer",
      "default": 6,
      "description": "Number of different stimuli to use (max 10)"
    },
    {
      "name": "stim1",
      "type": "string",
      "default": "a",
      "description": "Stimulus character 1"
    },
    {
      "name": "stim2",
      "type": "string",
      "default": "d",
      "description": "Stimulus character 2"
    },
    {
      "name": "stim3",
      "type": "string",
      "default": "c",
      "description": "Stimulus character 3"
    },
    {
      "name": "stim4",
      "type": "string",
      "default": "e",
      "description": "Stimulus character 4"
    },
    {
      "name": "stim5",
      "type": "string",
      "default": "o",
      "description": "Stimulus character 5"
    },
    {
      "name": "stim6",
      "type": "string",
      "default": "n",
      "description": "Stimulus character 6"
    },
    {
      "name": "stim7",
      "type": "string",
      "default": "b",
      "description": "Stimulus character 7"
    },
    {
      "name": "stim8",
      "type": "string",
      "default": "g",
      "description": "Stimulus character 8"
    },
    {
      "name": "stim9",
      "type": "string",
      "default": "s",
      "description": "Stimulus character 9"
    },
    {
      "name": "stim10",
      "type": "string",
      "default": "q",
      "description": "Stimulus character 10"
    },
    {
      "name": "timeout",
      "type": "integer",
      "default": 1500,
      "description": "Response timeout in milliseconds"
    },
    {
      "name": "demo_override",
      "type": "integer",
      "default": 0,
      "description": "Run short demo version (1=demo with reduced trials, 0=full test)",
      "options": {
        "reps": 1,
        "numstim": 4
      }
    }
  ]
}
