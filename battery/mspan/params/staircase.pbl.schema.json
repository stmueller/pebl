{
  "test": "staircase",
  "version": "1.0",
  "description": "STAIRCASE Test",
  "parameters": [
    {
      "name": "upperbound",
      "type": "integer",
      "default": 9,
      "description": "The longest list length"
    },
    {
      "name": "lowerbound",
      "type": "integer",
      "default": 3,
      "description": "The shortest list length"
    },
    {
      "name": "staircasestart",
      "type": "integer",
      "default": 4,
      "description": "starting point for staircasestart."
    },
    {
      "name": "numtrials",
      "type": "integer",
      "default": 10,
      "description": "Number of staircase trials."
    },
    {
      "name": "ISI",
      "type": "integer",
      "default": 1000,
      "description": "Inter-stimulus interval in ms"
    },
    {
      "name": "ITI",
      "type": "integer",
      "default": 1500,
      "description": "inter-trial interval."
    },
    {
      "name": "Wait",
      "type": "integer",
      "default": 500,
      "description": "How long to 'go to each room'"
    },
    {
      "name": "DoWait",
      "type": "boolean",
      "default": 0,
      "description": "Whether there should be a 'blow-up' of the screen",
      "options": [
        0,
        1
      ]
    }
  ]
}