define Start(p)
{
  gWin <- MakeWindow("black")
  
  ## Same setup as GetSubNum
  bg <- MakeCanvas(450,100,MakeColor("grey20"))
  Move(bg,gVideoWidth/2,90)
  AddObject(bg,gWin)
  
  box <- EasyTextBox("TEST", gVideoWidth/2-100, 150, gWin, 20, 200, 30)
  
  Print("Canvas: center=" + bg.x + "," + bg.y + " size=" + bg.width + "x" + bg.height)
  Print("Canvas spans: x " + (bg.x - bg.width/2) + "-" + (bg.x + bg.width/2) + ", y " + (bg.y - bg.height/2) + "-" + (bg.y + bg.height/2))
  Print("Textbox: topleft=" + box.x + "," + box.y + " size=" + box.width + "x" + box.height)  
  Print("Textbox spans: x " + box.x + "-" + (box.x + box.width) + ", y " + box.y + "-" + (box.y + box.height))
  
  Draw()
  WaitForKeyPress("X")
}
