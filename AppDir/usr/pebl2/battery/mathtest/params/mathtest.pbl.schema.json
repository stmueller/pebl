{
  "test": "mathtest",
  "version": "1.0",
  "description": "MATHTEST Test",
  "parameters": [
    {
      "name": "duration",
      "type": "integer",
      "default": 60,
      "description": "Duration, in sec, of each block"
    },
    {
      "name": "blocks",
      "type": "integer",
      "default": 7,
      "description": "Number of blocks to test"
    },
    {
      "name": "block1",
      "type": "string",
      "default": "a",
      "description": "easy addition"
    },
    {
      "name": "block2",
      "type": "string",
      "default": "A",
      "description": "Hard addition"
    },
    {
      "name": "block3",
      "type": "string",
      "default": "aA",
      "description": "block of mixed easy and hard addition"
    },
    {
      "name": "block4",
      "type": "string",
      "default": "m",
      "description": "Easy multiplication block"
    },
    {
      "name": "block5",
      "type": "string",
      "default": "M",
      "description": "Hard multiplication block"
    },
    {
      "name": "block6",
      "type": "string",
      "default": "mM",
      "description": "A block containing mixed multiplication"
    },
    {
      "name": "block7",
      "type": "string",
      "default": "aAmM",
      "description": "A block containing easy and hard addition + mult"
    },
    {
      "name": "requirecorrect",
      "type": "boolean",
      "default": 1,
      "description": "Can you advance to next trial after error?",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "givefeedback",
      "type": "boolean",
      "default": 1,
      "description": "Should correct/incorrect feedback be given",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "shuffleblocks",
      "type": "boolean",
      "default": 1,
      "description": "should blocks be randomized",
      "options": [
        0,
        1
      ]
    },
    {
      "name": "allowErrors",
      "type": "boolean",
      "default": 1,
      "description": "Should you restart on error, or move on",
      "options": [
        0,
        1
      ]
    }
  ]
}